{
  "servers": [
    {
      "name": "eslint-server",
      "command": ["node", "./node_modules/eslint-server/lib/index.js", "--stdio"],
      "cwd": "eslint/",
      "allowIncrementalChanges": false,
      "workspaceConfiguration": {
        "run": "onType",
        "validate": "probe"
      }
    },
    {
      "name": "Deno",
      "command": ["deno", "lsp"],
      "diagnosticsMessagesToIgnore": 2,
      "initializationOptions": {
        "enable": true,
        "lint": true,
        "unstable": true
      },
      "workspaceConfiguration": {
        "enable": true,
        "lint": true,
        "unstable": true
      }
    },
    {
      "name": "Flow",
      "command": ["./run.sh"],
      "cwd": "flow/",
      "waitForEmptyDiagnosticsOnOpen": false
    },
    {
      "name": "quick-lint-js",
      "command": ["quick-lint-js", "--lsp-server"]
    },
    {
      "name": "Rome",
      "command": ["node", "./node_modules/.bin/rome", "lsp"],
      "cwd": "rome/",
      "enable": false
    },
    {
      "name": "RSLint",
      "command": ["rslint-lsp"],
      "allowIncrementalChanges": false
    },
    {
      "name": "TypeScript-Theia",
      "command": ["node", "./node_modules/.bin/typescript-language-server", "--stdio"],
      "cwd": "typescript/",
      "needFilesOnDisk": true
    }
  ]
}
